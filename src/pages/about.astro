---
import BaseLayout from '../layouts/BaseLayout.astro';

const skills = [
  { name: "Astro", level: 70 },
  { name: "JavaScript", level: 85 },
  { name: "React", level: 70 },
  { name: "CSS", level: 85 },
  { name: "Tailwind CSS", level: 75 }
];
---

<BaseLayout 
  title="About" 
  description="Learn more about me and my journey in web development"
>
  <div class="about-container">
    <div class="profile-section">
      <div class="avatar">üë®‚Äçüíª</div>
      <h1>About Me</h1>
      <p class="tagline">Front End Developer & Astro Enthusiast</p>
    </div>
    
    <section class="bio">
      <h2>My Story</h2>
      <p>
        Hi! I'm a passionate web developer who loves building fast, 
        modern websites. I discovered Astro and fell in love with its 
        approach to building content-focused sites.
      </p>
      <p>
        When I'm not coding, you can find me exploring new technologies, 
        writing blog posts, or contributing to open-source projects.
      </p>
    </section>
    
    <section class="skills-section">
      <h2>Skills & Technologies</h2>
      <div class="skill-grid">
        {skills.map(skill => (
          <div class="skill-item">
            <div class="skill-header">
              <span class="skill-name">{skill.name}</span>
              <span class="skill-percentage">{skill.level}%</span>
            </div>
            <div class="skill-bar">
              <div class="skill-progress" style={`width: ${skill.level}%`}></div>
            </div>
          </div>
        ))}
      </div>
    </section>
    
    <section class="contact-section">
      <h2>Let's Connect</h2>
      <p>
        I'm always interested in hearing about new projects and opportunities.
        Feel free to reach out!
      </p>
      <div class="contact-buttons">
        <a href="mailto:hello@example.com" class="contact-btn">
          üìß Email Me
        </a>
        <a href="https://github.com" class="contact-btn" target="_blank">
          üíª GitHub
        </a>
        <a href="https://twitter.com" class="contact-btn" target="_blank">
          üê¶ Twitter
        </a>
      </div>
    </section>
  </div>
</BaseLayout>

<style>
  .about-container {
    max-width: 700px;
    margin: 0 auto;
  }
  
  .profile-section {
    text-align: center;
    margin-bottom: 3rem;
  }
  
  .avatar {
    font-size: 5rem;
    margin-bottom: 1rem;
  }
  
  h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
  }
  
  .tagline {
    color: var(--secondary-text);
    font-size: 1.25rem;
  }
  
  section {
    margin-bottom: 3rem;
  }
  
  h2 {
    font-size: 1.75rem;
    margin-bottom: 1.5rem;
    color: var(--accent-color);
  }
  
  .bio p {
    margin-bottom: 1rem;
    line-height: 1.8;
    color: var(--text-color);
  }
  
  .skill-grid {
    display: flex;
    flex-direction: column;
  }
  
  .skill-item {
    background-color: var(--card-bg);
    padding: 1rem;
    border-radius: 8px;
    border: 1px solid var(--border-color);
  }
  
  .skill-header {
    display: flex;
    justify-content: space-between;
    margin-bottom: 0.2rem;
  }
  
  .skill-name {
    font-weight: 600;
    color: var(--text-color);
  }
  
  .skill-percentage {
    color: var(--accent-color);
    font-weight: 600;
  }
  
  .skill-bar {
    height: 8px;
    background-color: var(--accent-color);
    border-radius: 40px;
    overflow: hidden;
  }
  
  .skill-progress {
    height: 100%;
    background: linear-gradient(90deg, var(--accent-color), #ec4899);
    border-radius: 4px;
    transition: width 1s ease;
  }
  
  .contact-section {
    text-align: center;
    padding: 2rem;
    background-color: var(--card-bg);
    border-radius: 12px;
  }
  
  .contact-section p {
    margin-bottom: 2rem;
    color: var(--secondary-text);
  }

  .contact-section a {
    color: var(--secondary-text);
  }
  
  .contact-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }
  
  .contact-btn {
    padding: 0.75rem 1.5rem;
    background-color: var(--accent-color);
    color: white;
    border-radius: 8px;
    font-weight: 600;
    transition: transform 0.2s, box-shadow 0.2s;
    text-decoration: none;
  }
  
  .contact-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 20px rgba(79, 70, 229, 0.3);
  }
  
  @media (max-width: 768px) {
    h1 {
      font-size: 2rem;
    }
    
    .contact-buttons {
      flex-direction: column;
    }
  }
</style>