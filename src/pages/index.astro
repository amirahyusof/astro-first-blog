---
import "../styles/global.css";
import BaseLayout from '../layouts/BaseLayout.astro';
import BlogCard from '../components/BlogCard.astro';

//manually define blog posts for now
const blogPosts = [
  {
    title: "Getting Started with Astro",
    description: "Learn the basics of Astro and why it's great for building fast websites.",
    date: "2025-09-20",
    slug: "getting-started-with-astro",
    tags: ["Astro", "Web Development", "Tutorial"]
  },
  {
    title: "Understanding Astro Islands",
    description: "Deep dive into Astro's island architecture and how it makes your site blazing fast.",
    date: "2025-09-25",
    slug: "understanding-astro-islands",
    tags: ["Astro", "Performance", "Architecture"]
  },
  {
    title: "Building a Blog with Astro",
    description: "Step-by-step guide to creating your own blog using Astro and Markdown.",
    date: "2025-09-25",
    slug: "building-blog-with-astro",
    tags: ["Astro", "Tutorial", "Blog"]
  }, 
	{
		title: "Deploying Astro Sites with Netlify",
		description: "Learn how to deploy your Astro site to popular hosting platforms.",
		date: "2025-09-29",
		slug: "deploying-astro-sites",
		tags: ["Astro", "Deployment", "Hosting", "Netlify"]
	}
];

const sortedPosts = blogPosts.sort((a, b) => 
	new Date(b.date).getTime() - new Date(a.date).getTime()
	);	

---

<BaseLayout title="Home" description="Welcome to my personal blog built with Astro">
	<section class="hero">
		<h1>Welcome to My Learning Blog ðŸ‘‹</h1>
    <p class="hero-subtitle">
      Exploring web development, Astro, and modern JavaScript.
    </p>
	</section>

	<section class="blog-section">
		<h2>Latest Posts</h2>
		<div class="blog-grid">
			{sortedPosts.map(post => (
				<BlogCard 
					title={post.title} 
					description={post.description} 
					date={post.date} 
					slug={post.slug}
					tags={post.tags}
				/>
			))}
		</div>
	</section>

	<section class="cta">
		<h2>Want to learn more?</h2>
		<p>Check out my about page to learn about my journey in web development.</p>	
		<a href="/about" class="cta-btn">About Me</a>
	</section>
</BaseLayout>

<style>
	  .hero {
    text-align: center;
    padding: 2rem 0;
  }
  
  .hero h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
    
  }
  
  .hero-subtitle {
    font-size: 1.25rem;
    color: var(--secondary-text);
  }
  
  .blog-section h2 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
  }
  
  .blog-grid {
    display: grid;
    gap: 2rem;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  }
  
  .cta {
    text-align: center;
    margin-top: 4rem;
    padding: 3rem 2rem;
    background-color: var(--card-bg);
    border-radius: 12px;
  }
  
  .cta h2 {
    font-size: 2rem;
    margin-bottom: 1rem;
  }
  
  .cta p {
    color: var(--secondary-text);
    margin-bottom: 1.5rem;
  }
  
  .cta-button {
    display: inline-block;
    background-color: var(--accent-color);
    color: white;
    padding: 0.75rem 2rem;
    border-radius: 8px;
    font-weight: 600;
    transition: transform 0.2s, box-shadow 0.2s;
  }
  
  .cta-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 20px rgba(79, 70, 229, 0.3);
    text-decoration: none;
  }
  
  @media (max-width: 768px) {
    .hero h1 {
      font-size: 2rem;
    }
    
    .blog-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
